<!DOCTYPE html>
<html>
<head>
  <title>Portfolio</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="col-xs-4 col-sm-2 col-md-2 clearfix" id="profile-nav">
    <div class="list-group">
      <a class="list-group-item"><span class="glyphicon glyphicon-th-list center-block" id="nav-button"></span></a>
    </div>
    <div class="list-group nav-group">
      <% if current_user %>
        <%= link_to "View Profile", user_path(current_user), class: "list-group-item" %>
      <% end %>
      <%= yield :nav %>
    </div>
  </div>

  <div class="container">
    <div class="col-xs-6 col-sm-10 col-md-10">

      <% if flash[:notice] %>
        <div class="flash alert alert-success alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="flash alert alert-danger alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= yield %>

    </div>
  </div>

</body>
</html>
