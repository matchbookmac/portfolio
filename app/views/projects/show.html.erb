
<h3> <%= @project.name %>
  <small class="muted">
    <%= link_to "Github repo", "#{@project.repo_URL}" %> |
    <% if @project.URL %>
      <%= link_to "Live Project Page", "#{@project.URL}" %>
    <% end %>
  </small>
</h3>
<hr>
<p><span class="lead">Project Description: </span><%= @project.description %></p>

<% content_for :nav do %>
  <% if @user %>
    <%= link_to "Edit #{@project.name}",
        edit_project_path(@project, user_id: @user.id),
        class: "list-group-item" %>
  <% else %>
    <%= link_to "Edit #{@project.name}",
        edit_project_path(@project),
        class: "list-group-item" %>
  <% end %>
  <%= link_to "Delete Project",
      project_path(@project),
      class: "list-group-item",
      data: { confirm: "Are you sure?" },
      method: :delete %>
<% end %>
