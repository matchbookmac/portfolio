<%= render "layouts/errors", object: @category %>

<%= bootstrap_form_for @category do |f| %>
  <%= f.text_field :language %>
  <%= f.text_field :description %>
  <% if params[:profile_id] %>
    <%= hidden_field :profile, :id, name: "category[profile_ids][]" %>
  <% end %>
  <%= f.submit class: "btn btn-success btn-block" %>
<% end %>
