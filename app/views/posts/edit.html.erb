<h1>Editing Post</h1>

<%= render 'form' %>

<%= content_for :nav do %>
  <%= render "nav_content" %>
  <%= link_to 'Show', post_path(@post), class: "list-group-item" %>
  <% if user_signed_in? && current_user.admin? %>
    <%= link_to 'New Post', new_post_path, class: "list-group-item" %>
  <% end %>
<% end %>
