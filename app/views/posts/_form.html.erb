<%= bootstrap_form_for @post do |f| %>
  <%= render "layouts/errors", object: @post %>
  <%= f.text_field :title %>
  <%= f.text_area :content, rows: 20 %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :comment, value: false %>
  <div class="actions">
    <%= f.submit class: "btn btn-default btn-block" %>
  </div>
<% end %>
