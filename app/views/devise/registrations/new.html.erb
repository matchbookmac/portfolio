<div class="col-md-8">
  <h2>Sign up</h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
    <%= f.url_field :github_URL, placeholder: "https://github.com/<YOUR USERNAME>" %>
    <%= f.email_field :email, autofocus: true %>

    <% if @minimum_password_length %>
      <%= f.label "#{@minimum_password_length} characters minimum", class: "sr-only" %>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "#{@minimum_password_length} characters minimum" %>

    <%= f.password_field :password_confirmation, autocomplete: "off" %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  <% end %>
  <br>
  <%= render "devise/shared/links" %>

</div>
