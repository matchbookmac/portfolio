<%= render "layouts/errors", object: @user %>

<%= bootstrap_form_for @user,
    layout: :horizontal,
    label_col: "col-sm-3",
    control_col: "col-sm-9" do |f| %>
  <div class="col-md-6">
    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
    <%= f.text_field :github_URL, placeholder: "https://github.com/<YOUR USERNAME>" %>
  </div>
  
  <%= f.submit class: "btn btn-success btn-block" %>
<% end %>
