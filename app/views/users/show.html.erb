<h3> <%= current_user.full_name %>
  <small class="muted">
    <%= link_to "Github", "#{current_user.github_URL}" %>
  </small>
</h3>
<hr>
<p><span class="lead">Bio: </span><%= current_user.bio %></p>

<div class="col-md-6">
  <p class="lead text-center">Categories</p>
  <div class="list-group">
    <% if current_user.categories.any? %>
      <% current_user.categories.each do |category| %>
        <%= link_to category.language, category_path(category, user_id: current_user.id), class: "list-group-item text-center" %>
      <% end %>
    <% end %>
  </div>
</div>
<div class="col-md-6">
  <p class="lead text-center">Projects</p>
  <div class="list-group">
    <% if current_user.projects.any? %>
      <% current_user.projects.each do |project| %>
        <%= link_to project.name, project_path(project, user_id: current_user.id), class: "list-group-item text-center" %>
      <% end %>
    <% end %>
  </div>
</div>

<% content_for :nav do %>
  <%= link_to "Add a Category",
      new_category_path(user_id: current_user.id),
      class: "list-group-item" %>
  <%= link_to "Add a Project",
      new_project_path(user_id: current_user.id),
      class: "list-group-item" %>
  <%= link_to "Edit #{current_user.first_name}'s Profile",
      edit_user_path(current_user),
      class: "list-group-item text-warning" %>
  <%= link_to "Delete Profile",
      user_path(current_user),
      class: "list-group-item text-danger",
      data: { confirm: "Are you sure?" },
      method: :delete %>
<% end %>
