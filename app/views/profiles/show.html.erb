<h3> <%= @profile.full_name %></h3>
<p>
  <%= @profile.bio %>
</p>

<div class="col-md-6">
  <p class="lead">Categories</p>
  <% if @profile.categories.any? %>
    <% @profile.categories.each do |category| %>
      <li><%= link_to category.language, category_path(category, profile_id: @profile.id) %></li>
    <% end %>
  <% end %>
</div>
<div class="col-md-6">
  <p class="lead">Projects</p>
  <% if @profile.projects.any? %>
    <% @profile.projects.each do |project| %>
      <li><%= link_to project.name, project_path(project, profile_id: @profile.id) %></li>
    <% end %>
  <% end %>
</div>

<% content_for :nav do %>
  <%= link_to "Edit #{@profile.first_name}'s Profile",
      edit_profile_path(@profile),
      class: "list-group-item" %>
  <%= link_to "Add a Category",
      new_category_path(profile_id: @profile.id),
      class: "list-group-item" %>
  <%= link_to "Add a Project",
      new_project_path(profile_id: @profile.id),
      class: "list-group-item" %>
  <%= link_to "Delete Profile",
      profile_path(@profile),
      class: "list-group-item",
      data: { confirm: "Are you sure?" },
      method: :delete %>
<% end %>
